<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.satchelgrant.docsap">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SplashActivity" />
        <activity android:name=".ui.ResultsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.satchelgrant.docsap.ui.SplashActivity" />
        </activity>
        <activity android:name=".ui.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.satchelgrant.docsap.ui.SplashActivity" />
        </activity>
        <activity android:name=".ui.ContactActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.satchelgrant.docsap.ui.SplashActivity" />
        </activity>
        <activity android:name=".ui.DoctorDetailActivity" />
        <activity android:name=".ui.NewReviewActivity" />
        <activity android:name=".ui.CreateAccountActivity" />
        <activity android:name=".ui.ReviewedDoctorsActivity" />
        <activity android:name=".ui.ReviewListActivity"></activity>
    </application>

</manifest>